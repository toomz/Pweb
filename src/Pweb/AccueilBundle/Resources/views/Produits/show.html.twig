{% extends '::base.html.twig' %}

{% block title %} Les produits {% endblock %}

{% block css %} <link rel="stylesheet" media="screen" href="/Pweb/css/produits.css" /> {% endblock %}

{% block body %}


  
  <div class="col_img">
    <img src="{{ prod.image }}"/>
  </div>

  <div class="col_desc">
    <ul><h3> {{ prod.libelleProd }} </h3></ul>
    <ul><h4>Description</h4><p> {{ prod.description }} </p></ul>
    <ul><p> Prix : {{ prod.prix }} â‚¬ </p></ul>
    <ul><p> Poids : {{ prod.poids }} gr.</p></ul>
