{% extends 'PwebCompteBundle:Admin:index.html.twig' %}

{% block title %}
	Admin - Commandes
{% endblock %}

{% block bodyadmin %}

	<table style="margin:15px 15px">
		<tr>
			<th style="padding:10px">Date</th>
			<th style="padding:10px">Statut</th>
			<th style="padding:10px">Produits</th>
		</tr>
	
	{% for commande in commande_list %}		
		<tr>
			<td style="padding:7px">{{ commande.date|date('d/m/Y') }}</td>
			<td style="padding:7px">{{ commande.libelleStat }}</td>
			<td style="padding:7px">{{ commande.libelleProd }}</td>
		<tr>
		
	{% else %}
		<tr>
			<td style="padding:7px">NULL</td>
			<td style="padding:7px">NULL</td>
		<tr>
		
		<br/><br/><p>Aucune commande enregistr√©e</p>
	{% endfor %}

	</table>
	
{% endblock %}